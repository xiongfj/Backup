@using Webdiyer.WebControls.Mvc
@{
    ViewBag.Title = "用户列表";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model PagedList<MainTain.Models.EditUserRoleViewModel>
<h2>用户列表</h2>

@Html.ActionLink("新建用户", "Create")
<fieldset>
    <legend>查询</legend>
    @using (Ajax.BeginForm("AjaxSearchPost",
        new RouteValueDictionary {
            { "id", "" }
        },
        new AjaxOptions
        {
            UpdateTargetId = "views",
            InsertionMode = InsertionMode.Replace
        },
        new RouteValueDictionary {
            { "id", "searchForm" }
        }))
    {
        <span>Name：</span><input type="text" name="Name" id="Name" style="width:120px" />
        <span>Email：</span><input type="text" name="Email" id="Email" style="width:120px" />
        <input type="submit" value="搜索(S)" accesskey="S" />
    }
</fieldset>
<div id="views">
    @Html.Partial("_AjaxSearchPost", Model)
</div>
@section Scripts
{
    @{Html.RegisterMvcPagerScriptResource();}
}