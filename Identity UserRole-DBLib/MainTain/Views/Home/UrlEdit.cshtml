@model MainTain.Models.UrlEditViewModel

@{
    ViewBag.Title = "UrlEdit";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <fieldset>
        <legend>Url</legend>

        @Html.HiddenFor(model => model.UrlKey)

        <div class="editor-label">
            @Html.LabelFor(model => model.UrlValue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UrlValue)
            @Html.ValidationMessageFor(model => model.UrlValue)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "UrlIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}