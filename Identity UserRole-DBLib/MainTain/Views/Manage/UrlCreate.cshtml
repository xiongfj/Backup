@model MainTain.Models.UrlEditViewModel

@{
    ViewBag.Title = "UrlCreate";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<fieldset>
    <legend>Url</legend>

    <div class="editor-label">
        @Html.LabelFor(model => model.UrlKey)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.UrlKey, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UrlKey, "")
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.UrlValue)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.UrlValue, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UrlValue, "")
    </div>
    <!--div class="editor-field">
        @*@Html.HiddenFor(model => model.UserID)*@
    </div-->

    <p>
        <input type="submit" value="Create" />
    </p>
</fieldset>
}

<div>
    @Html.ActionLink("Back to List", "UrlIndex")
</div>

