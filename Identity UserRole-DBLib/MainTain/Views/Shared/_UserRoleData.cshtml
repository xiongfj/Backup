
@using Webdiyer.WebControls.Mvc;
@model PagedList<MainTain.Models.EditUserRoleViewModel>
<table class="table table-hover table-striped" id="page-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.UserName, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("编辑用户", "Edit", new { id = item.Id }) |
                @Html.ActionLink("删除用户", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure?');" })
            </td>
        </tr>
    }
</table>